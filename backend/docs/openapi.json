{
  "openapi": "3.0.0",
  "info": {
    "title": "To-Do API Schemas",
    "description": "This is the OPEN API for our Todo Application",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/todos": {
      "get": {
        "summary": "Get all to-do items",
        "description": "Retrieve a list of all to-do items",
        "responses": {
          "200": {
            "description": "A list of to-do items",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ToDo"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ToDo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the to-do item"
          },
          "title": {
            "type": "string",
            "description": "Title of the to-do item"
          },
          "description": {
            "type": "string",
            "description": "Detailed description of the to-do item"
          },
          "status": {
            "type": "string",
            "description": "Status of the to-do item (e.g., pending, completed)"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "The time the to-do item was created"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time",
            "description": "The last time the to-do item was updated"
          }
        }
      }
    }
  }
}