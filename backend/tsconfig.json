{
  "compilerOptions": {
    "types": ["jest", "node"],

    "target": "ES6",
    "module": "commonjs",
    "resolveJsonModule": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"]
}
